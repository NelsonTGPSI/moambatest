    <main>
      <section class="page-hero" style="background:linear-gradient(180deg,rgba(116,105,76,0.06),transparent);padding:72px 0">
        <div class="container">
          <h1 style="font-family:Playfair Display, serif;color:var(--brown)">Contactos</h1>
          <p class="section-sub">Entre em contacto connosco</p>
        </div>
      </section>

      <section id="contact" class="contact container reveal">
        <h2>Contactos</h2>
        <div class="contact-grid">
          <div>
            <p><strong>Endereço:</strong> Rua Exemplo 123, Luanda, Angola</p>
            <p><strong>Telefone:</strong> +244 912 345 678</p>
            <p><strong>Email:</strong> reservas@moambadangola.ao</p>
            <div class="socials">
              <a href="#" class="social" data-tooltip="Facebook" aria-label="Facebook">F</a>
              <a href="#" class="social" data-tooltip="Instagram" aria-label="Instagram">I</a>
            </div>
          </div>
          <div class="map-wrap">
            <div class="map-frame">
              <iframe src="https://www.google.com/maps?q=Luanda&output=embed" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
              <div class="map-marker" aria-hidden="true"><span></span></div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <footer class="site-footer">
